# Production Environment Configuration
# Copy this file to .env.prod and fill in actual values

PROJECT_NAME=mono-class-platform
PUBLIC_DOMAIN=platform.llmclass.org
TZ=Asia/Seoul

# Port Configuration
PROXY_HTTP_PORT=80
BACKEND_PORT=8000

# Database Configuration (CHANGE THESE IN PRODUCTION)
POSTGRES_DB=appdb
POSTGRES_USER=appuser
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_IN_PRODUCTION
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Backend Configuration
LOG_LEVEL=info
UVICORN_ACCESS_LOG=true
BUILD_VERSION=v0.1.0
BUILD_TS=2024-01-01T00:00:00Z

# Production flags
DEBUG_MODE=false
ENABLE_ECHO_ENDPOINT=false

# OpenAPI Documentation (production - secure by default)
DOCS_ENABLED=false
DOCS_AUTH_ENABLED=true
DOCS_AUTH_USER=admin
DOCS_AUTH_PASSWORD=CHANGE_THIS_DOCS_PASSWORD

# Cloudflare Tunnel (fill in after tunnel creation)
TUNNEL_NAME=llmclass-platform
TUNNEL_ID=your-tunnel-id-here
TUNNEL_TOKEN=your-tunnel-token-here